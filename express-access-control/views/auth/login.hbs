<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 py-4">

          <div class="card">
            <div class="card-header">{{title}}</div>
            <div class="card-body">

                  <div class="form-group">
                    <label for="email">Email</label>
                    <input v-model="$root.email" id="email" type="email" name="email" value="" class="form-control" placeholder="Email">
                  </div>

                  <div class="form-group">
                    <label for="password">Password</label>
                    <input v-model="$root.password" id="password" type="password" name="password" value="" class="form-control" placeholder="password">
                  </div>

                  <div class="form-group">
                    <button @click="$root.login()" class="btn btn-success">Login</button>
                  </div>



            </div>
          </div>


        </div>
    </div>
</div>
