<div class="container-fluid py-3">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    Chat users <span v-html="users.length"></span>
                </div>
                <div class="card-body">
                    <div v-for="user in users">
                        <span v-html="user.name"></span><br>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8 ">
            <div v-if="!isRoomJoined">
                <div class="card">
                    <div class="card-body">

                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input v-model="name" type="name" class="form-control" placeholder="Enter name" id="name">
                    </div>

                    <div class="form-group">
                        <label for="room">Room:</label>
                        <input v-model="room" type="room" class="form-control" placeholder="Enter room" id="room">
                    </div>
 
                    <button @click="joinChat" class="btn btn-primary">Join Chat</button>

                    </div>
                </div>        
            </div>

                <div v-else class="card card-bordered">
                                <div class="card-header">
                                    <h4 class="card-title"><strong>Chat</strong></h4>
                                </div>
                                <div class="ps-container ps-theme-default ps-active-y" ref="chatContainer" id="chat-content" style="overflow-y: scroll !important; height:400px !important;">
                                    
                                    <div v-for="msg in msgs">

                                        <div v-if="msg.type == 'msg' ">

                                        
                                        <div v-if='!msg.isSelf' class="media media-chat"> <img class="avatar" src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="...">
                                            <div class="media-body">
                                                <div>

                                                    <span class="font-weight-bold">

                                                        <span v-html="msg.name"></span>
                                                    </span>
                                                    <span class="small">
                                                        <span v-html="msg.time"></span>
                                                    </span>

                                                </div>
                                                
                                                <p>
                                                    <span class="text-black">
                                                        <span v-html="msg.content"></span>
                                                        
                                                    </span>
                                                </p>
                                            </div>
                                        </div>


                                        <div v-else class="media media-chat media-chat-reverse">
                                            <div class="media-body">
                                                <div>
                                                    <span class="font-weight-bold">
                                                    <span v-html="msg.name"></span>
                                                    </span>
                                                    <span class="small">
                                                        <span v-html="msg.time"></span>
                                                    </span>
                                                </div>

                                                <p>
                                                   <span v-html="msg.content"></span>
                                                </p>
                                                
                                            </div>
                                        </div>
                                        </div>

                                        <div v-else class="text-center">
                                            <span class="alert alert-primary" role="alert" v-html="msg.content"></span>
                                        </div>

                                    </div>
                                    
                                    <div class="ps-scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                                        <div class="ps-scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                                    </div>
                                    <div class="ps-scrollbar-y-rail" style="top: 0px; height: 0px; right: 2px;">
                                        <div class="ps-scrollbar-y" tabindex="0" style="top: 0px; height: 2px;"></div>
                                    </div>
                                </div>
                                <div class="publisher bt-1 border-light"> <img class="avatar avatar-xs" src="https://img.icons8.com/color/36/000000/administrator-male.png" alt="...">
                                    <input v-model="message" @keyup.enter="sendMessage" class="publisher-input" type="text" placeholder="Write something"> <span class="publisher-btn file-group" @click="sendMessage"> <i class="fa fa-paperclip file-browser"></i> <input type="file"> </span> <a class="publisher-btn" href="#" data-abc="true"><i class="fa fa-smile"></i></a> <a class="publisher-btn text-info" href="#" data-abc="true"><i class="fa fa-paper-plane"></i></a> </div>
                            </div>
                        

        </div>
    </div>
</div>